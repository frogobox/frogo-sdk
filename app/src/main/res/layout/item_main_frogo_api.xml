<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/frogo_dimen_16dp"
    android:layout_marginTop="@dimen/frogo_dimen_16dp"
    android:layout_marginEnd="@dimen/frogo_dimen_16dp"
    android:background="@drawable/bg_card_16dp"
    android:elevation="@dimen/frogo_dimen_2dp"
    android:orientation="vertical"
    android:padding="@dimen/frogo_dimen_16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/frogo_dimen_64dp"
        android:layout_height="@dimen/frogo_dimen_64dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/frogo_dimen_16dp"
        android:layout_toEndOf="@id/iv_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="@color/frogoColorPrimary"/>

        <TextView
            android:id="@+id/tv_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            tools:text="@string/app_name" />

    </LinearLayout>

</RelativeLayout>