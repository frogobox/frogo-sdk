<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/frogo_dimen_16dp"
        android:layout_marginTop="@dimen/frogo_dimen_16dp"
        android:layout_marginRight="@dimen/frogo_dimen_16dp"
        android:background="@drawable/frogo_bg_amber_4dp"
        android:text="CLICK ME FOR HANDLE SHIMMER" />

    <com.frogobox.recycler.widget.FrogoShimmerRecyclerView
        android:id="@+id/rv_shimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:frvClipToPadding="false"
        app:frvPaddingTop="@dimen/frogo_dimen_16dp" />

</LinearLayout>