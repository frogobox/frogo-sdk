<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frogo_rv_grid_type_2_root_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/frogo_dimen_16dp"
    android:layout_marginBottom="@dimen/frogo_dimen_16dp"
    android:background="@drawable/bg_card_16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frogo_dimen_150dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/frogo_dummy_content_description"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/frogoTvListTitle"
        android:layout_marginHorizontal="@dimen/frogo_dimen_16dp"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/tv_sub"
        style="@style/FrogoTvListSubTitle"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/text_color"
        tools:text="@tools:sample/lorem/random" />

</LinearLayout>