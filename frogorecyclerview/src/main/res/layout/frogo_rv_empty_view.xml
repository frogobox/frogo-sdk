<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frogo_rv_empty_root_linear_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/frogo_rv_empty_iv_poster"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/frogo_rv_ic_empty_view" />

    <TextView
        android:id="@+id/frogo_rv_empty_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/frogo_rv_no_data_found"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/frogo_rv_empty_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frogo_rv_please_insert_data" />

</LinearLayout>